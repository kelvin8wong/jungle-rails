<div class="panel panel-default items">
<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2">Order</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_total = 0 %>
    <% cart.each do |product_id, details| %>
      <%= item.product.inspect %>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="4">
        TOTAL:
      </th>
      <th>
        <%= @cart_total %>
      </th>
    </tr>
  </tfoot>
</table>
</div>